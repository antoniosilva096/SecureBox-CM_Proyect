<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.computacionmovil.securebox.Fragmentos.F_Records">


  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/recyclerView_Records"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      tools:listitem="@layout/item_password"
      android:paddingBottom="30dp"
      android:clipToPadding="false"/>


  <com.google.android.material.floatingactionbutton.FloatingActionButton
      android:id="@+id/FAB_AddButton"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:backgroundTint="@color/floatingButton"
      android:layout_alignParentBottom="true"
      android:layout_alignParentEnd="true"
      android:src="@drawable/add_icon"
      android:layout_margin="10dp"
      android:contentDescription="@string/FAB_AddButton"
      />

</RelativeLayout>